{% extends 'admin/layout.twig' %}
{% use 'admin/blocks/tablesorter.twig' %}
{% set title = 'Historique de connexion' %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li><a href="{{ path('admin') }}">Accueil</a></li>
        <li><a href="{{ path('admin.user') }}">Utilisateur</a></li>
        <li class="active">{{ title }}</li>
    </ol>
{% endblock %}

{% block title_prefix %}

{% endblock %}

{% block title %}
    <span class="glyphicon glyphicon-list"></span> {{ title }}
{% endblock %}

{% block content %}
   
    {% if history|length > 0 %}
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nom d'utilisateur</th>
                    <th>Site</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
            {% for login in history %}
                <tr>
                    <td><a href="{{ path('admin.user.edit', {id:user.id}) }}">{{ user.username }}</a></td>
                    <td>{{ user.site }}</td>
                    <td>{{ login.created|date("d/m/Y h:i:s") }}</td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="7" class="ts-pager form-horizontal">
                        {{ block('pager') }}
                    </th>
                </tr>
            </tfoot>
        </table>
    {% else %}
        <div class="alert alert-warning">Il n'y a aucun historique correspondant Ã  cet utilisateur.</div>
    {% endif %}
{% endblock %}
